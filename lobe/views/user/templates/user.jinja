{% extends "__base.jinja" %}
{% block body %}
    <div class='row'>
        <div class='col-12'>
            <h1 class='font-weight-bold'>{{user.name if user.name != None else 'Ekki skráð'}}</h1>
            <p>{{user.email}}</p>
            {% if current_user.is_admin() %}
                <button type='button' class='btn btn-sm btn-secondary float-right text-warning dropdown-toggle' data-toggle='dropdown'>
                    {{macros.btn_icon('edit', 'r')}}
                    Breyta
                </button>
                <div class='dropdown-menu'>
                    <a href="{{url_for('user.user_edit', id=user.id)}}" class='dropdown-item'>
                        {{macros.btn_icon('edit', 'r')}}
                        Breyta notanda
                    </a>
                    <a href="{{url_for('user.user_toggle_admin', id=user.id)}}" class='dropdown-item text-warning'>
                        {{macros.btn_icon('key', 'r')}}
                        {% if user.is_admin() %}
                            Gera að notanda
                        {% else %}
                            Gera að vefstjóra
                        {% endif %}
                    </a>
                </div>
                <button type='button' data-toggle='modal', data-target='#deleteModal' class='btn btn-sm btn-secondary text-danger float-right mr-2'>
                    {{macros.btn_icon('trash', 'r')}}
                    Eyða notanda
                </button>
            {% endif %}
        </div>
    </div>
    <div class="lists">
        <div class="wrapper">
            <div style="background-color: #303030; padding-left: 8px;" data-toggle="collapse" data-target="#collapse-beernights-admin" aria-expanded="false" aria-controls="collapse-users" style="cursor: pointer;">
                <p class="py-2 text-success"><i class="fas fa-plus mr-2" aria-hidden="true"></i> Bjórkvöldin mín</p>
            </div>
            <div class="collapse" id="collapse-beernights-admin">
                {% if beernights_admin|length > 0 %}
                        <ul id="beerListUL">
                            {% for b in beernights_admin %}
                                <li class="my-2">
                                    {{macros.beernight_line(b, current_user)}}
                                </li>
                            {% endfor %}
                        </ul>
                {% endif %}
            </div>
        </div>
        <div class="wrapper">
            <div style="background-color: #303030; padding-left: 8px;" data-toggle="collapse" data-target="#collapse-beernights-member" aria-expanded="false" aria-controls="collapse-users" style="cursor: pointer;">
                <p class="py-2 text-success"><i class="fas fa-plus mr-2" aria-hidden="true"></i> Bjórkvöld sem gestur</p>
            </div>
            <div class="collapse" id="collapse-beernights-member">
                {% if beernights_member|length > 0 %}
                        <ul id="beerListUL">
                            {% for b in beernights_member %}
                                <li class="my-2">
                                    {{macros.beernight_line(b, current_user)}}
                                </li>
                            {% endfor %}
                        </ul>
                {% endif %}
            </div>
        </div>

        <div class="wrapper" style="margin-top: 10px;">
            <div style="background-color: #303030; padding-left: 8px;" data-toggle="collapse" data-target="#collapse-beers" aria-expanded="false" aria-controls="collapse-ratings" style="cursor: pointer;">
                <p class="py-2 text-success"><i class="fas fa-plus mr-2" aria-hidden="true"></i> Uppáhalds bjórar</p>
            </div>
            <div class="collapse" id="collapse-beers">
                {% if fav_beers|length > 0 %}
                    <ul id="beerListUL">
                            {% for b in fav_beers %}
                                <li class="my-2">
                                    {{macros.beer_line(b, current_user)}}
                                </li>
                            {% endfor %}
                        </ul>
                {% endif %}
            </div>
        </div>
    </div>
   
{% endblock %}

{% block modals %}
    <div class="modal fade" id='deleteModal' tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Þú ert við það að eyða notenda!</h5>
                <button type="button" class="close" data-dismiss="modal">
                <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                Stór ákvörðun buddy
                <br><br>
                <ul>
                    {% for collection in user.assigned_collections %}
                        <li>
                            <a target="_blank" rel="noopener noreferrer" href="{{url_for('collection.collection_detail', id=collection.id)}}">{{collection.name}}</a>
                        </li>
                    {% endfor %}
                </ul>
                <br><br>
                Ertu viss um að þú viljir eyða þessum notanda?
                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Loka</button>
                <a href='{{url_for("user.delete_user", id=user.id)}}' class='btn btn-danger'>
                    Eyða
                    <span class='ml-1'><i class='fa fa-trash'></i></span>
                </a>
            </div>
            </div>
        </div>
    </div>
{% endblock %}