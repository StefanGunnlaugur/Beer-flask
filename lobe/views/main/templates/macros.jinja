            {% endif %}
            <label for="r_input_5_{{type}}_{{beer.id}}" class="r-radio">
                <svg style="margin: 0px {{margin}}px;" aria-hidden="true" focusable="false">
                    <use xlink:href="#star"/>
                </svg>
                <span role="presentation_{{type}}_{{beer.id}}">5 stjörnur</span>
            </label>
        </fieldset>
    </form>
</div>
{% endmacro %}
