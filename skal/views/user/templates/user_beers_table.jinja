<div class='table-responsive'>
    <table class='table'>
        <thead>
            <th>
                {{ _('Nafn') }}
                {{macros.sort_th_a('name')}}
            </th>
            <th>
                {{ _('Einkunn') }}
            </th>
            <th>
                {{ _('Alkóhól') }}
            </th>
            <th>
                {{ _('Verð') }}
            </th>
        </thead>
        <tbody>
            {% for b in beers %}
                <tr>
                    <td><a href='{{url_for("beer.beer_detail", id=b.id)}}'>{{b.name}}</a></td>
                    <td>{{b.average_rating}}</td>
                    <td>{{b.alcohol}}</td>
                    <td>{{b.price}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>