{% extends "_list.jinja" %}
{% block title %}{{ _('Allir uppáhalds drykkir') }}{% endblock %}
{% block total %}{{beers.total}}{% endblock %}
{% block buttons %}

{% endblock %}
{% block table %}
    {% if beers.total > 0 %}
        {% with beers=beers.items %}
            {% include 'user_beers_table.jinja'%}
        {% endwith %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% if beers.total > 0 %}
        {{macros.pagination(beers, url_for('user.fav_beer_list'))}}
    {% endif %}
{% endblock %}

{% block no_results %}
    {% if beers.total == 0 %}
        <div class='jumbotron w-100'>
            <h3 class='font-weight-bold'>
                <span class='text-{% if type %}{{type}}{% else %}warning{% endif %}'>
                    <i class='fa fa-{% if icon %}{{icon}}{% else %}exclamation-triangle{% endif%}'></i>
                </span>
                {{ _('Engir drykkir') }}
            </h3>
            <p>{{ _('Til að sjá drykki þarf fyrst að hjarta þá.') }}</p>
        </div>
    {% endif %}
{% endblock %}
