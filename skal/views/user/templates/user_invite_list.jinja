{% extends "_list.jinja" %}
{% block title %}Öll boðin mín{% endblock %}
{% block total %}{{invites.total}}{% endblock %}
{% block buttons %}
{% endblock %}
{% block table %}
    {% if invites.total > 0 %}
        {% with invites=invites.items %}
            {% include 'user_invite_table.jinja'%}
        {% endwith %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% if invites.total > 0 %}
        {{macros.pagination(invites, url_for('user.invites_list'))}}
    {% endif %}
{% endblock %}

{% block no_results %}
    {% if invites.total == 0 %}
        <div class='jumbotron w-100'>
            <h3 class='font-weight-bold'>
                <span class='text-{% if type %}{{type}}{% else %}warning{% endif %}'>
                    <i class='fa fa-{% if icon %}{{icon}}{% else %}exclamation-triangle{% endif%}'></i>
                </span>
                {{ _('Engin boð') }}
            </h3>
            <p>{{ _('Til að sjá boð þarf fyrst að bjóða þér í smökkun.') }}</p>
        </div>
    {% endif %}
{% endblock %}
